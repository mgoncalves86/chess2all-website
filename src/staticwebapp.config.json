{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/assets/*", "/files/*"]
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html"
    }
  },
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "Referrer-Policy": "no-referrer-when-downgrade",
    "Strict-Transport-Security": "max-age=31536000; includeSubDomains; preload",
    "Content-Security-Policy": "default-src 'self' https: data:; script-src 'self' 'unsafe-inline' https:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src * data:; connect-src *"
  },
  "routes": [
    {
      "route": "/assets/img/*",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/assets/vendor/*",
      "headers": {
        "Cache-Control": "public, max-age=2592000"
      }
    },
    {
      "route": "/assets/css/*",
      "headers": {
        "Cache-Control": "public, max-age=2592000"
      }
    },
    {
      "route": "/assets/js/*",
      "headers": {
        "Cache-Control": "public, max-age=2592000"
      }
    }
  ]
}
